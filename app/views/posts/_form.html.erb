
<div class="container">
<%= form_for(@post) do |f| %>
  <p id="form">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %><br />
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br />
    <%= f.label :blurb %><br/>
    <%= f.text_area :blurb %><br>
  </p>
  <%= f.fields_for :photos do |builder| %>
    <%= render "photo_fields", :f => builder %>
  <% end %>
 <!--  <p><%= link_to_add_fields "Add Photos", f, :photos %></p> -->
  <p id="submit"><%= f.submit "Submit" %></p>
<% end %>
<br>
<br>
<br>
</div>
